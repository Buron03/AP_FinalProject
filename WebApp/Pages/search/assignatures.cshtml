@page
@model WebApp.Pages.AssignaturesModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
  Layout = "../shared/_AdminMenuLayout.cshtml";
}

<div class="jumbotron">
  <h1 class="display-3">Assignatures</h1>
    <table class="table">
      <thead class="thead-inverse">
        <tr>
          <th>Hours</th>
          <th>Group</th>
          <th>Subject</th>
        </tr>
      </thead>
      
      <tbody>
      @foreach(var teacher in Model.Teachers)
      {
        <tr>
          <th></th>
          <th></th>
          <th class="bg-primary">Teacher: @teacher.FirstName @teacher.SecondName @teacher.FirstSurname @teacher.SecondSurname</th>
        </tr>
      @foreach(var assignature in Model.GetTeacherAssignatures(teacher.IdTeacher))
      {
        <tr>
          <td>@(Model.GetSubject(assignature).TheoreticalHours + Model.GetSubject(assignature).PracticalHours)</td>
          <td>@Model.GetGroup(assignature).Name</td>
          <td>@Model.GetSubject(assignature).Name.PadLeft(60, ' ')</td>
        </tr>
      }
      }
      </tbody>
    </table>
</div>